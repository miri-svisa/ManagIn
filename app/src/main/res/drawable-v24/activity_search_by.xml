<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DisplaysInvoiceList"
    android:background="@drawable/background"
    android:orientation="vertical">


    <TextView
        android:id="@+id/invoiceView"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_margin="70dp"
        android:background="#006DB11D"
        android:gravity="center_horizontal"
        android:hapticFeedbackEnabled="false"
        android:text="search invoice by"
        android:textColor="#050705"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

    <ListView
        android:id="@+id/options"
        android:layout_width="375dp"
        android:layout_height="185dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="65dp"
        android:textSize="30sp"
        app:backgroundTint="#11B118"
        app:layout_constraintBottom_toTopOf="@+id/valueToSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invoiceView" />

    <EditText
        android:id="@+id/valueToSearch"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="64dp"
        android:inputType="text"

        android:hint="Search details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/options" />

    <Button
        android:id="@+id/searchInvoice"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginBottom="22dp"
        android:text="@string/search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valueToSearch" />

</androidx.constraintlayout.widget.ConstraintLayout>
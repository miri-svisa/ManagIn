<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SelectInvoiceUses"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".SelectInvoiceUses">

        <ImageView
            android:id="@+id/LitteiInvoice"
            android:layout_width="414dp"
            android:layout_height="311dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@+id/Show"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/Delete"
            android:layout_width="413dp"
            android:layout_height="81dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:baselineAligned="false"
            android:text="Delete"
            android:textAlignment="center"
            app:backgroundTint="#5A6AC3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Edit" />

        <Button
            android:id="@+id/Show"
            android:layout_width="413dp"
            android:layout_height="81dp"
            android:layout_gravity="center_vertical|center_horizontal"

            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:baselineAligned="false"
            android:text="Show"
            android:textAlignment="center"
            app:backgroundTint="#5A6AC3"
            app:layout_constraintBottom_toTopOf="@+id/Edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LitteiInvoice" />

        <Button
            android:id="@+id/Edit"
            android:layout_width="420dp"
            android:layout_height="85dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="10dp"
            android:baselineAligned="false"
            android:text="Edit"
            android:textAlignment="center"
            app:backgroundTint="#5A6AC3"
            app:layout_constraintBottom_toTopOf="@+id/Delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Show" />



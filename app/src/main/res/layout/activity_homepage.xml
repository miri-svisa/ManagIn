<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homapage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/hello"
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:layout_margin="100dp"
        android:gravity="center_horizontal"
        android:hapticFeedbackEnabled="false"
        android:text="HELLO"
        android:textColor="#0B0C0B"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/addNewInvoice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.155" />

    <!--    //android:onClick="onButtonClicked"-->
    <!--    //tools:ignore="OnClick"-->


    <Button
        android:id="@+id/addNewInvoice"
        android:baselineAligned="false"
        android:text="Add a new invoice"
        app:layout_constraintBottom_toTopOf="@+id/invoiceSearch"
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="20dp"
        android:layout_marginBottom="32dp"
        android:onClick="login"
        android:textAlignment="center"
        app:backgroundTint="#5A6AC3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress2"
        app:layout_constraintVertical_bias="0.692"
        tools:ignore="OnClick,UsingOnClickInXml" />/>

    <Button
        android:id="@+id/invoiceSearch"
        android:text="Search a invoice"
        android:textAlignment="center"
        android:visibility="visible"
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:onClick="register"
        app:backgroundTint="#5A6AC3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="OnClick,UsingOnClickInXml"/>

</androidx.constraintlayout.widget.ConstraintLayout>
